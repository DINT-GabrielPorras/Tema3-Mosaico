<Window x:Class="Tema3_Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_Mosaico"
        mc:Ignorable="d"
        Title="Mosaico" Height="550" Width="900">
    <DockPanel LastChildFill="True">
        <TextBlock x:Name="arriba" DockPanel.Dock="Top" Background="Purple" Height="100"/>
        <TextBlock x:Name="izquierda" DockPanel.Dock="Left" Background="Purple" Width="100"/>
        <TextBlock x:Name="abajo" DockPanel.Dock="Bottom" Background="Green" Height="100"/>
        <TextBlock x:Name="derecha" DockPanel.Dock="Right" Background="Green" Width="100"/>
        <TextBlock x:Name="interiorIzquierda" DockPanel.Dock="Left" Background="Orange" Width="100"/>
        <TextBlock x:Name="interiorAbajo" DockPanel.Dock="Bottom" Background="Orange" Height="100"/>
        <TextBlock x:Name="interiorDerecha" DockPanel.Dock="Right" Background="Pink" Width="100"/>
        <TextBlock x:Name="interiorArriba" DockPanel.Dock="Top" Background="Pink" Height="100"/>
        <TextBlock x:Name="centro" Background="Black"/>
    </DockPanel>
</Window>
